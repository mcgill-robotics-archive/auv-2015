:host
    display block
    position relative
    background-color #fff
    border-radius 2px
    box-shadow rgba(0, 0, 0, 0.098) 0px 2px 4px, rgba(0, 0, 0, 0.098) 0px 0px 3px

#outerContainer
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    padding 5px

#mainPanel
    position relative

#mainContainer
    position relative
    overflow-y auto
    overflow-x hidden
    -webkit-overflow-scrolling touch

#mainContainer::-webkit-scrollbar
    display none

#toolbarContent
    font-weight 400
    color #212121
    fill #212121
    background #039be5
    margin -5px -5px 5px -5px //remove the card padding

#toolbarContent > paper-icon-button::shadow #ripple
    color #212121
    -webkit-border-radius 2px
    -moz-border-radius 2px
    border-radius 2px
